<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <link href="~/Content/Sidebar.css" rel="stylesheet" />
    <style>
        html, body{
            font-family: 'Roboto', Arial, Helvetica, sans-serif;
        }
    </style>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">Personel Yönetim Sistemi </div>
            <div class="list-group list-group-flush">
                <a href="@Url.Action("Index", "Home")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-home mr-1"></i> Anasayfa</a>
                <a href="@Url.Action("Create", "Department")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-plus mr-1"></i> Departman Ekle</a>
                <a href="@Url.Action("Index", "Department")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-building mr-1"></i> Departman Listesi</a>
                <a href="@Url.Action("Create", "Personel")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-user-plus mr-1"></i>Personel Ekle</a>
                <a href="@Url.Action("Index", "Personel")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-user-tie mr-1"></i> Personel Listesi</a>
            </div>
        </div>

        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">Menüyü göster/gizle</button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        @*<li class="nav-item active">
                            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                        </li>*@
                        @*<li class="nav-item">
                            <a class="nav-link" href="@Url.Action("LogOut", "Account")">Çıkış yap</a>
                        </li>*@
                        @*<li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"  id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @HttpContext.Current.User.Identity.Name
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="@Url.Action("UserProfile", "Manage")">İşlemler</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="@Url.Action("Logout","Account")">Çıkış yap</a>
                            </div>
                        </li>*@
                        <li class="nav-item active">
                            <a class="nav-link">@HttpContext.Current.User.Identity.Name</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("UserProfile", "Manage")">Kullancı işlemleri</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("Logout", "Account")">Çıkış yap</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                <div>
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>




    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/umd/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#menu-toggle").click(function (e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });
        });
    </script>
</body>
</html>
