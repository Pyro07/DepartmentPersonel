@model DepartmentPersonel.Entities.Personel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("Edit", "Personel", FormMethod.Post))
    {
        <div class="container">
            <div class="row mt-5">
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-form-label col-md-3">Departman</label>
                        @Html.DropDownListFor(p => p.DepartmentId, new SelectList(ViewBag.PersonelDepartments, "Id", "Name"), "Departman Seçiniz", new { @class = "form-control col-md-5" })
                        @Html.ValidationMessageFor(p => p.Department, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-3">Ad</label>
                        @Html.TextBoxFor(p => p.Name, new { @class = "form-control col-md-5" })
                        @Html.ValidationMessageFor(p => p.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-3">Soyad</label>
                        @Html.TextBoxFor(p => p.LastName, new { @class = "form-control col-md-5" })
                        @Html.ValidationMessageFor(p => p.LastName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group row">
                        <input type="submit" value="Kaydet" class="btn btn-info offset-md-3 col-md-5" />
                    </div>
                </div>
            </div>
        </div>
    }

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
