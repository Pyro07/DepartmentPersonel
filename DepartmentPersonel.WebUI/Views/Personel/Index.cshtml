@model List<DepartmentPersonel.Entities.Personel>
@{
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}
<style>
    table, thead, tbody, tr, th, td{
        vertical-align: middle !important;
    }
</style>

    <div class="container">
        <div class="row mt-5">
            <div class="col-md-12">
                <table class="table table-striped table-hover text-center">
                    <thead>
                        <tr>
                            <th>Kimlik Numarası</th>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Maaş</th>
                            <th>Departman</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdentityNumber</td>
                                <td>@item.Name</td>
                                <td>@item.LastName</td>
                                <td>@item.PersonelSalary</td>
                                <td>@item.Department.Name</td>
                                <td>
                                    <a href="@Url.Action("Edit","Personel", new { id = item.Id })" class="btn btn-warning text-white">
                                        <i class="fa fa-save"></i> Güncelle
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Delete","Personel", new { id = item.Id })" class="btn btn-danger text-white">
                                        <i class="fa fa-trash-alt"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

