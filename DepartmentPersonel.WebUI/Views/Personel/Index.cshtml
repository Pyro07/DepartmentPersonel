@using PagedList.Mvc
@model PagedList.IPagedList<DepartmentPersonel.Entities.Personel>
@{
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
    ViewBag.Title = "Personel Listesi";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />
<style>
    table, thead, tbody, tr, th, td{
        vertical-align: middle !important;
    }
</style>

    <div class="container">
        <div class="row mt-5">
            <div class="col-md-12">
                @using (Html.BeginForm("Index", "Personel", FormMethod.Get))
                {
                    <div class="form-group row">
                        <div class="col-sm-11">
                            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
                        </div>
                        <input type="submit" value="Ara" class="btn btn-light col-sm-1" />
                    </div>                
                }
                <table class="table table-striped table-hover text-center">
                    <thead>
                        <tr>
                            <th>Kimlik Numarası</th>
                            <th>@Html.ActionLink("Ad", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })</th>
                            <th>@Html.ActionLink("Soyad", "Index", new { sortOrder = ViewBag.LastNameParm, currentFilter = ViewBag.CurrentFilter })</th>
                            <th>Maaş</th>
                            <th>@Html.ActionLink("Departman", "Index", new { sortOrder = ViewBag.DepartmentNameParm, currentFilter = ViewBag.CurrentFilter })</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdentityNumber</td>
                                <td>@item.Name</td>
                                <td>@item.LastName</td>
                                <td>@item.PersonelSalary</td>
                                <td>@item.Department.Name</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Personel", new { id = item.Id })" class="btn btn-warning text-white">
                                        <i class="fa fa-save"></i> Güncelle
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Delete", "Personel", new { id = item.Id })" class="btn btn-danger text-white">
                                        <i class="fa fa-trash-alt"></i> Sil
                                    </a>
                                </td>
                            </tr>
                            }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.SortOrder, currentFilter = ViewBag.CurrentFilter }))
            </div>
        </div>
    </div>

