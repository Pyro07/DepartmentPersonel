@model DepartmentPersonel.Entities.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/SignInCSS.css" rel="stylesheet" />
</head>
<body class="text-center">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <form class="form-signin">
            @if (ViewBag.ErrorMessage != null)
            {
                <p class="alert alert-danger">@ViewBag.ErrorMessage</p>
            }
            @if(ViewBag.Message != null)
            {
                <p class="alert alert-danger">@ViewBag.Message</p>
            }
            <h1 class="h3 mb-3 font-weight-normal">Sign In</h1>
            @Html.ValidationSummary(true)
            <div class="form-group row">
                <div class="col-sm-12">
                    @Html.TextBoxFor(a => a.UserName, new { @class = "form-control", placeholder = "Username", required = "required", autofocus = "autofocus" })
                    @Html.ValidationMessageFor(a => a.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    @Html.TextBoxFor(a => a.Password, new { @class = "form-control", placeholder = "Password", required = "required", type = "password" })
                    @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="checkbox mb-3 mt-2">
                <label>
                    @Html.CheckBoxFor(a => a.RememberMe)
                    Remember me
                </label>
            </div>
            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Sign in" />
            <a href="@Url.Action("ForgotPassword", "Account")" class="mt-4 btn-link">Parolamı unuttum?</a>
            <p class="mb-3 text-muted">© 2020 Burak BAŞESKİOĞLU</p>
        </form>
    }

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
