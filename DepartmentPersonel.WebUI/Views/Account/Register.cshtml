@model DepartmentPersonel.Entities.ViewModels.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateUser</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/SignInCSS.css" rel="stylesheet" />
</head>
<body class="text-center">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <form class="form-signin">
            <h1 class="h3 mb-3 font-weight-normal">Sign Up</h1>
            @ViewBag.ErrorMessage
            <div class="form-group row">
                <div class="col-sm-12">
                    @Html.TextBoxFor(u => u.Name, new { @class = "form-control", placeholder = "Adınız", autofocus = "autofocus", required = "required" })
                    @Html.ValidationMessageFor(u => u.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    @Html.TextBoxFor(u => u.LastName, new { @class = "form-control", placeholder = "Soyadınız", required = "required" })
                    @Html.ValidationMessageFor(u => u.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    @Html.TextBoxFor(u => u.UserName, new { @class = "form-control", placeholder = "Kullanıcı adı", required = "required" })
                    @Html.ValidationMessageFor(u => u.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    @Html.TextBoxFor(u => u.EmailAddress, new { @class = "form-control", placeholder = "E-posta adresi", type = "email", required = "required" })
                    @Html.ValidationMessageFor(u => u.EmailAddress, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    @Html.TextBoxFor(u => u.Password, new { @class = "form-control", placeholder = "Parola", type = "password", required = "required" })
                    @Html.ValidationMessageFor(u => u.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    @Html.TextBoxFor(u => u.ConfirmPassword, new { @class = "form-control", placeholder = "Parolanızı onaylayın", type = "password", required = "required" })
                    @Html.ValidationMessageFor(u => u.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <input type="submit" class="btn btn-info btn-lg btn-block mt-3" value="Kayıt ol" />
            <p class="mb-3 mt-5 text-muted">© 2020 Burak BAŞESKİOĞLU</p>

        </form>
    }

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
