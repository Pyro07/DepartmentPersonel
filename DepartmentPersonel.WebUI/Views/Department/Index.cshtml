@using DepartmentPersonel.WebUI.Helper
@using PagedList.Mvc
@model PagedList.IPagedList<DepartmentPersonel.Entities.Department>

@{
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
    ViewBag.Title = "Departman Listesi";
    
}
<link href="~/Content/PagedList.css" rel="stylesheet" />
<style>
    table, thead, tbody, tr, th, td {
        vertical-align: middle !important;
    }
</style>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-12">
            @using (Html.BeginForm("Index", "Department", FormMethod.Get))
            {

                <div class="form-group row">
                    <div class="col-sm-11">
                        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
                    </div>
                    <input type="submit" value="Ara" class="btn btn-light col-sm-1" />
                </div>


            }
            <table class="table table-striped table-hover text-center">
                <thead>
                    <tr>
                        <th>Departman Id</th>
                        <th>@Html.ActionLink("Departman Adı", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        İşlemler
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="@Url.Action("Edit", "Department", new { id = item.Id, name = Url.FriendlyUrlTitle(item.Name) })">Güncelle</a>
                                        <a class="dropdown-item" href="@Url.Action("Delete", "Department", new { id = item.Id, name = Url.FriendlyUrlTitle(item.Name) })">Sil</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.SortOrder, currentFilter = ViewBag.CurrentFilter }))
        </div>
    </div>
</div>
